#include<iostream>
using namespace std;

int main()
{
    int a , b ; 
    
    cout<<"enter a ";
    cin>>a;
    cout<<"enter b ";
    cin>>b;
    
    int c=a , d=a , e=0;
    
    cout<<"a+b="<<a-(-b)<<endl;
    
    for(int i=0;i<b;i++)
    {
        c=c-(-a);
    }
    cout<<"a*b="<<c-a<<endl;
  
    while(b<d)
    {
        d=d-b;
        e++;
    }
    cout<<"remainder="<<d<<endl;
    cout<<"quotient="<<e;
    
}
